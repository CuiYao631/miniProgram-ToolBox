/* pages/welcome/welcome.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}
.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.Hcontainer{
  background-image: url(https://s2.loli.net/2022/01/06/OuVApfa3x1cXt28.jpg);
  background-size: 100% 100%;
  height: 100vh;
  width: auto;
  display:  flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.bt{
  background-color: #b1a5703b;
  border-radius:10px;
  border: 1px solid white;
  box-shadow: 0px 2px 4px 2px #6bcee7a9;
  color: white;
  height: 8vh;
  width: 30vh;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 23px;
}
.time{
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 25px;
}
